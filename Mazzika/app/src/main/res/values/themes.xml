<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mazzika" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorFont</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimarySurface</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customTabText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="transitionSongsButtons">
        <item name="android:layout_width">@dimen/button_transition_dimen</item>
        <item name="android:layout_height">@dimen/button_transition_dimen</item>
    </style>

    <style name="contextMenuTexts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/view_medium_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>
</resources>